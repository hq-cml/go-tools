<logging>
    <!-- 输出到控制台 -->
    <filter enabled="true">
        <tag>stdout</tag>
        <type>console</type>
        <level>DEBUG</level>
    </filter>
    <!-- 输出到文件，并配置滚动规则 -->
    <filter enabled="true">
        <tag>file</tag>
        <type>file</type>
        <level>INFO</level>
        <property name="filename">/tmp/app.log</property>

        <!-- 在这里定义格式 -->
        <property name="format">[%D %T] [%L] (%s) %M</property>
        <property name="rotate">true</property>     <!-- 启用滚动 -->
        <property name="maxsize">100M</property>    <!-- 单个文件最大100MB -->
        <property name="maxlines">100000</property> <!-- 单个文件最多10万行 -->
        <property name="daily">true</property>      <!-- 按天分割 -->
    </filter>
</logging>